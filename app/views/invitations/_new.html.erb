<div class="invitation form-wrap">

  <h1>Invite</h1>

  <%= form_with(url: create_invitation_path, method: "post", local: true) do %>
    <%= hidden_field_tag :event_id, @event.id %>
    <div class="field">
      <%= select_tag(:user_id, options_for_select(@user_options), class: "input") %>
    </div>
    <div class="field">
      <%= submit_tag "Invite", class: "submit" %>
    </div>



  <% end %>

</div>
