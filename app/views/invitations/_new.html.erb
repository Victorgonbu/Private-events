<div class="invitation form-wrap">

  <h1>Invite</h1>

  <%= form_tag("/invitations/create", method: :post) do %>
    <%= hidden_field_tag :event_id, @event.id %>
    <div class="field">
      <%= text_field_tag :name, nil, placeholder: "Guest name", class: "input" %>
    </div>
    <div class="field">
      <%= submit_tag "Invite", class: "submit" %>
    </div>



  <% end %>

</div>
