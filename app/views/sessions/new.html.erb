<div class="form-wrap">
  <h1>Log in</h1>

  <%= form_tag("/sessions", method: "post", class: "form")  do %>

    <div class="field">
      <%= label_tag(:name, "Name") %>
      <%= text_field_tag(:name) %>
    </div>
    <div class="field">
      <%= submit_tag ("log in"), class: "submit" %>
    </div>
  <% end %>
</div>
