<div class="form-wrap">

  <h1>Sign up</h1>

  <%= form_with(model: @user, class: "form") do |u|%>
    <div class="field">
      <%= u.label :name %>
      <%= u.text_field :name %>
    </div>
    <div class="field">
      <%= u.label :email %>
      <%= u.text_field :email %>
    </div>
    <div class="field">
      <%= u.submit "Create account", class: "submit" %>
    </div>

  <% end %>
</div>
