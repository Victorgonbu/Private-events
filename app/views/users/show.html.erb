  <% if current_user.events.any? %>
  <div class="all-events host">
    <div class="event-item">
      <h1>Hosted Events</h1>
      <ul class = "event-list">
        <% current_user.events.each do |event| %>
          <li>
            <p>Event: <span> <%= event.name %> </span></p>
            <p>Location: <span> <%= event.location %> </span></p>
            <p>Date: <span> <%= event.date %> </span></p>
            <%= link_to event_path(event) do %>
            <p class="arrow"><span>Details</span> <i class="fas fa-caret-right"></i></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>


    </div>
  <% end %>


<% if current_user.attended_events.any? %>
<div class="all-events">
  <div class="event-item">
    <h1>Upcomming Events</h1>
    <ul>
      <% current_user.upcomming_events.each do |atevent|%>
        <li>
          <p class="event-name"> <%= link_to atevent.name,  event_path(atevent)%> </p>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="event-item">
    <h1>Previous Attended Events</h1>
    <ul>
     <% current_user.prev_events.each do |atevent| %>
     <li>
       <p class="event-name"><%= link_to atevent.name,  event_path(atevent)%> </p>
     </li>
     <% end %>
    </ul>
  </div>


</div>

<% end %>
